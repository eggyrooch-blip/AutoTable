{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "tests/build",
    "rootDir": ".",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "tests/**/*.ts",
    "src/lib/**/*.ts"
  ],
  "exclude": []
}
